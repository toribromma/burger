<div class="container-fluid">
  
  <div class="row p-2">
  <h1>Can I haz cheezeburger</h1>
  </div>

  <div class="row">

    <div class="col-6 p-3">
      <h2>I haz not eaten cheezeburger</h2>
        <ul class="list-group">
          {{#each burgers}}
            {{#unless this.devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>

    <div class="col-6 p-3">
      <h2>I haz eaten cheezeburger</h2>
        <ul class="list-group">
          {{#each burgers}}
            {{#if this.devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>

</div>
    <div class="row">
    <div class="col-4"><img src="https://images2.minutemediacdn.com/image/upload/c_fill,g_auto,h_1248,w_2220/f_auto,q_auto,w_1100/v1555929966/shape/mentalfloss/cheezburger_410_6.jpg" width="300px" alt=""></div>
    <div class="card m-1 p-3 col-4">
      <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" burger_name="burger_name">
          </div>
          <button type="submit">Add Burger</button>
        </form>
    </div>
    <div class="col-4"></div>
    </div>
  </div>
